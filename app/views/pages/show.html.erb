
<h1><%= @page.libelle %></h1>

<div class="zerogrid"> 
	<p>
		<% @articles.each do|a| %>
			<div class="col-1-3 margeBox resume fond " style="background-color:#C6A6A6" onclick="location.href='<%=article_path(a)%>'">
				<p>
					<p><h2><%= a.intitule %></h2></p>
				</p>
				<div style="float:left;">
					<%= button_to "delete", article_path(a), :method=>:delete, :class=>:destroy, data: { confirm: 'Are you sure?' }%>
				</div>
				<div style="float:left;">
					<%= button_to "Show", article_path(a), :method=>:get%>
				</div>
				<div style="clear:both;">
				</div>
			</div>	
		<% end %>
	</p>
</div>
<div style="float:left;">
	<%= link_to "back", pages_path, :method=>:get, :class=>:destroy, data: { confirm: 'Are you sure?' }, class: 'underline'%>
</div>
<div style="clear:both;">
</div>

